{
  "defaultSeverity": "error",
  "extends": [
    "tslint-react",
    "prettier"
  ],
  "rules": {
    "only-arrow-functions": true,
    "semicolon": [
      true,
      "always",
      "strict-bound-class-methods"
    ],
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "jsx-boolean-value": false,
    "no-consecutive-blank-lines": true,
    "react-hooks/exhaustive-deps": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "no-console": {
      "severity": "warning"
    },
    "max-line-length": {
      "options": [
        120
      ]
    },
    "align": false,
    "typedef": [
      true,
      "call-signature",
      "property-declaration"
    ],
    "jsx-curly-spacing": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  }
}